public class FictionBook extends Book {
    private String category;

    public FictionBook() {
    }

    public FictionBook(String bookCode, String name, String author, int price, String category) {
        super(bookCode, name, author, price);
        this.category = category;
    }

    public String getCategory() {
        return category;
    }

    public void setCategory(String category) {
        this.category = category;
    }

    public int getPrice() {
        return (int) (super.getPrice() * 0.93);
    }

    @Override
    public String toString() {
        return String.format(
                ConsoleColors.YELLOW +
                        "Book { Code: '%s', Name: '%s', Author: '%s', Price: %d, Category: '%s' }" +
                        ConsoleColors.RESET,
                getBookCode(), getName(), getAuthor(), getPrice(), category
        );
    }
}
